<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".HomePage">


    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/tabBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:itemBackground="@color/purple_200"
        app:itemTextColor="@color/white"
        app:menu="@menu/menu_navigation" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="114dp"
        android:layout_above="@+id/panicbtn"
        android:layout_marginBottom="342dp"
        android:gravity="center_horizontal|top">


        <ImageButton
            android:id="@+id/happy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:padding="15dp"
            android:src="@drawable/ic_baseline_person_add_24" />

        <ImageButton
            android:id="@+id/neutral"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"
            android:layout_weight="1"
            android:padding="15dp"
            android:src="@drawable/ic_baseline_person_24" />

        <ImageButton
            android:id="@+id/dislike"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"

            android:layout_marginBottom="5dp"
            android:layout_weight="1"
            android:padding="15dp"
            android:src="@drawable/ic_baseline_person_remove_24" />

    </LinearLayout>

    <Button
        android:id="@+id/panicbtn"
        android:layout_width="247dp"
        android:layout_height="125dp"
        android:layout_above="@+id/tabBar"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="82dp"
        android:layout_marginBottom="109dp"
        android:text="PANIC BUTTON!!!"
        android:textSize="34sp" />

    <TextView
        android:id="@+id/dailyTasks"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:layout_above="@+id/panicbtn"
        android:layout_below="@+id/neutral"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="96dp"
        android:layout_marginEnd="23dp"
        android:layout_marginBottom="143dp"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="24dp"
        tools:ignore="NotSibling" />

    <Button
        android:id="@+id/showTodayTask"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/panicbtn"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="113dp"
        android:layout_marginBottom="20dp"
        android:text="SHOW TODAYS TASK" />

</RelativeLayout>
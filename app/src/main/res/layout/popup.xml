<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <EditText
        android:id="@+id/newMedication"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Medication Name: (Paracetamol)"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="314dp" />

    <EditText
        android:id="@+id/newDosage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="76dp"
        android:hint="Dosage Amount: (2 Tablets)"
        android:textSize="24sp"
        app:layout_constraintTop_toBottomOf="@+id/newMedication"
        tools:layout_editor_absoluteX="0dp" />

    <EditText
        android:id="@+id/newTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp"
        android:hint="Time to Take: (12:30PM)"
        android:inputType="datetime"
        android:textSize="24sp"
        app:layout_constraintTop_toBottomOf="@+id/newDosage"
        tools:layout_editor_absoluteX="0dp" />

    <Button
        android:id="@+id/saveButton"
        android:layout_width="149dp"
        android:layout_height="56dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="Submit Medication! "
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.137"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.976" />

    <Button
        android:id="@+id/cancelButton"
        android:layout_width="149dp"
        android:layout_height="56dp"
        android:text="Cancel Entry! "
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.854"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.976" />


</androidx.constraintlayout.widget.ConstraintLayout>